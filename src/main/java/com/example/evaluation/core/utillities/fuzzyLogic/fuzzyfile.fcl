FUNCTION_BLOCK fuzzyfile	// Block definition (there may be more than one block per file)

VAR_INPUT				// Define input variables
	point : REAL;
END_VAR

VAR_OUTPUT				// Define output variable
	tip : REAL;
END_VAR

FUZZIFY point			// Fuzzify input variable 'service': {'poor', 'good' , 'excellent'}
	TERM poor := trape 1 1 2 2.5;
	TERM unsatisfactory := trian 1 2.5 3;
	TERM average := trian 2.5 3 3.5;
	TERM good := trian 3 3.5 4;
	TERM excellent := trape 3.5 4 5 5;
END_FUZZIFY

DEFUZZIFY tip			// Defzzzify output variable 'tip' : {'cheap', 'average', 'generous' }
	TERM poor := trape 0 0 20 30;
	TERM unsatisfactory := trian 20 40 60;
	TERM average := trian 40 60 90;
	TERM good := trian 60 90 100;
	TERM excellent := trape 90 100 140 140;
	
	METHOD : COG;		// Use 'Center Of Gravity' defuzzification method
	DEFAULT := 0;		// Default value is 0 (if no rule activates defuzzifier)
END_DEFUZZIFY

RULEBLOCK No1
	AND : MIN;			// Use 'min' for 'and' (also implicit use 'max' for 'or' to fulfill DeMorgan's Law)
	ACT : MIN;			// Use 'min' activation method
	ACCU : MAX;			// Use 'max' accumulation method

	RULE 1 : IF service IS poor THEN tip IS poor;
	RULE 2 : IF service IS unsatisfactory THEN tip IS unsatisfactory;
	RULE 3 : IF service IS average THEN tip IS average;
	RULE 4 : IF service IS good THEN tip IS good;
	RULE 5 : IF service IS excellent THEN tip IS excellent;
END_RULEBLOCK

END_FUNCTION_BLOCK